<mvc:View controllerName="com.bom.bomweight.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table" xmlns:smartTable="sap.ui.comp.smarttable">
	<l:VerticalLayout width="100%">
		<!--	<Label text="Culligan"/>-->
		<fb:FilterBar reset="onReset" search="onGo" id="btnId" showRestoreButton="true" showClearButton="true">
			<fb:filterGroupItems>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="Material" partOfCurrentVariant="true" visibleInFilterBar="true"
					mandatory="true">
					<fb:control>
						<Input id="multiInput" placeholder="Enter Material No" width="206px" submit="onEnterMatNo" required="true" showValueHelp="true"
							valueHelpRequest="onFrag"></Input>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="Plant" labelTooltip="Plant" mandatory="true" partOfCurrentVariant="true"
					visibleInFilterBar="true">
					<fb:control>
						<Input id="idPlant" placeholder="Enter Plant" class="apUiLargeMarginBegin" width="206px" required="true"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="C" label="BOM Usage" labelTooltip="BOM Usage" mandatory="true"
					partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input id="idBOMUsage" placeholder="Enter BOM Usage" class="apUiLargeMarginBegin" width="206px" required="true"/>
					</fb:control>
				</fb:FilterGroupItem>
			</fb:filterGroupItems>
		</fb:FilterBar>
	</l:VerticalLayout>
	<Table items="{path:'BRF>/p', sorter: { path: 'itm', descending: false } }" id="tab" alternateRowColors="true"
		updateFinished=".onUpdateFinished">
		<headerToolbar>
			<Toolbar>
				<Title level="H1" text="{worklistView>/worklistTableTitle}"/>
				<ToolbarSpacer/>
				<Button id="idExportToExcel" tooltip="Export to Excel" text="Download Excel" type="Emphasized" width="12%" press="onDataExport"
					icon="sap-icon://excel-attachment" iconFirst="true"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column >
				<header>
					<Text text="Item"/>
				</header>
			</Column>
			<Column >
				<header>
					<Text text="Material"/>
				</header>
			</Column>
			<Column hAlign="Center">
				<Label text="Quantity"/>
			</Column>
			<Column >
				<Label text="Net Wt"/>
			</Column>
			<Column >
				<Label text="Gross Wt"/>
				<footer>
					<Text text="{path:'BRF>/s/0/label'}"/>
				</footer>
			</Column>
			<Column >
				<Label text="Total Net Wt"/>
				<footer>
					<OverflowToolbar>
						<Text text="{path:'BRF>/s/0/addNQ',formatter:'.inox.numFormatftotal'}"/>
					</OverflowToolbar>
				</footer>
			</Column>
			<Column>
				<Label text="Total Gross Wt"/>
				<footer>
					<Text text="{path: 'BRF>/s/0/addGQ',formatter:'.inox.numFormatftotal'}"/>
				</footer>
			</Column>
			<Column >
				<Label text="Masterdata Net Wt"/>
				<footer>
					<Text text="{path: 'BRF>/m/0/mmNW'}"/>
				</footer>
			</Column>
			<Column >
				<Label text="Masterdata Gross Wt"/>
				<footer>
					<Text text="{path: 'BRF>/m/0/mmGW'}"/>
				</footer>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<ObjectIdentifier text="{path:'BRF>itm'}"/>
				<FormattedText htmlText="{parts:[{ path: 'BRF>bmc'}, { path: 'BRF>asm' }] , formatter:'.inox.bold'}"/>
				<!--<Text text="{BRF>asm}"/>-->
				<Text text="{BRF>qty}"/>
				<Text text="{BRF>net}"/>
				<Text text="{BRF>gro}"/>
				<Text text="{path:'BRF>tnt',formatter:'.inox.numFormat'}"/>
				<Text text="{path:'BRF>tgt',formatter:'.inox.numFormat'}"/>
				<FormattedText htmlText="{parts:[{ path: 'BRF>mnw'}, { path: 'BRF>asm' }] , formatter:'.inox.flex'}"/>
				<FormattedText htmlText="{parts:[{ path: 'BRF>mgw'}, { path: 'BRF>asm' }] , formatter:'.inox.flex'}"/>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>